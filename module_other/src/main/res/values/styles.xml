<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="common_rect_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="common_rect_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="common_rect_horizontal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="common_rect_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="common_rect_zero_horizontal">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="common_rect_zero_vertical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_0</item>
    </style>

    <style name="common_recycler_vertical" parent="common_rect_vertical">
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="common_recycler_wrap" parent="common_rect_wrap">
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="common_recycler_match" parent="common_rect_match">
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="common_textView" parent="common_rect_wrap">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="common_textView_white_big" parent="common_textView">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/text_color_light</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="common_textView_white_tiny" parent="common_textView_white_big">
        <item name="android:textSize">@dimen/text_size_smaller</item>
    </style>

    <style name="common_textView_white_small" parent="common_textView_white_big">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="common_textView_white" parent="common_textView_white_big">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>
    <style name="common_wrap_divider" parent="common_rect_vertical">
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/divider_color</item>
    </style>
</resources>