<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_work_item"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/work_satisics_infobg">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_report"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/icon_complain" />

        <TextView
            android:id="@+id/tv_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/iv_report"
            android:text="@string/complaints_reprt"
            android:textColor="@color/work_satisics_info"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_report"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/iv_report"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_report_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="152"
                android:textColor="@color/work_satisics_info"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="@string/second"
                android:textColor="@color/d6d4e6"
                android:textSize="@dimen/text_size_big"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
