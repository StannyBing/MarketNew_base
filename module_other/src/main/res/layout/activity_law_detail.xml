<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.zx.module_library.view.ToolBarView
        android:id="@+id/toolbar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="@string/law_rgl_query">

    </com.zx.module_library.view.ToolBarView>

    <TextView
        android:id="@+id/tv_law_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:drawableLeft="@drawable/collect_normal_gray"
        android:drawablePadding="@dimen/dp_4"
        android:text="@string/add_collect"
        android:textColor="@color/text_color_noraml" />

    <WebView
        android:id="@+id/wv_law_query"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layerType="hardware"></WebView>
</LinearLayout>