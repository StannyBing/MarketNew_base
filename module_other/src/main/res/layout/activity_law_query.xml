<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <com.zx.module_library.view.ToolBarView
        android:id="@+id/toobar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="@string/law_rgl_query">

    </com.zx.module_library.view.ToolBarView>

    <com.zx.module_library.view.SearchView
        android:id="@+id/sv_law_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:hint_text="@string/hint_law_name">

    </com.zx.module_library.view.SearchView>

    <com.zx.zxutils.views.SwipeRecylerView.ZXSwipeRecyler
        android:id="@+id/rv_law_query"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_20">

    </com.zx.zxutils.views.SwipeRecylerView.ZXSwipeRecyler>

</LinearLayout>