<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_func_itemView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_func_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_func_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="标题标题"
            android:textColor="@color/text_color_noraml"
            android:textSize="@dimen/text_size_normal"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_func_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:textColor="@color/text_color_noraml"
            android:textSize="@dimen/text_size_small"/>
    </LinearLayout>

    <View
        android:id="@+id/view_func_maxDivider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/light_gray"
        android:visibility="gone"/>

    <View
        android:id="@+id/view_func_minDivider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="20dp"
        android:background="@color/divider_color"/>

</LinearLayout>
