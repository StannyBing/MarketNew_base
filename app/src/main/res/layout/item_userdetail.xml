<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/tv_userDetail_itemKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="key"
        android:textColor="@color/text_color_light"
        android:textSize="@dimen/text_size_normal"/>

    <TextView
        android:id="@+id/tv_userDetail_itemValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="5dp"
        android:text="value"
        android:textColor="@color/text_color_noraml"
        android:textSize="@dimen/text_size_normal"/>

    <EditText
        android:id="@+id/et_userDetail_itemValue"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="5dp"
        android:background="@null"
        android:gravity="bottom"
        android:text="value"
        android:textColor="@color/text_color_noraml"
        android:textSize="@dimen/text_size_normal"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_userDetail_canEdit"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/library_arraw_more"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_color"/>

</RelativeLayout>
