<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/ll_mark_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_mark_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_mark_select"
                android:layout_width="15dp"
                android:layout_marginRight="5dp"
                android:layout_height="15dp"
                android:background="@drawable/not_select"/>

            <TextView
                android:id="@+id/tv_mark_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_mark_icon"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="fsfdsffdfdsf"
                android:textSize="@dimen/text_size_smaller"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
