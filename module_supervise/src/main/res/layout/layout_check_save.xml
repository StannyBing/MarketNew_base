<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_check_select"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/divider_color"/>

    <LinearLayout
        android:id="@+id/ll_template_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="模板类型:"
            android:textColor="@color/text_color_noraml"
            android:textSize="@dimen/text_size_normal"/>

        <com.zx.zxutils.views.ZXSpinner
            android:id="@+id/sp_template_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:visibility="visible">

        </com.zx.zxutils.views.ZXSpinner>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/divider_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="模板名称:"
            android:textColor="@color/text_color_noraml"
            android:textSize="@dimen/text_size_normal"/>

        <EditText
            android:id="@+id/et_template_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入..."
            android:maxLength="256"
            android:minHeight="50dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textCursorDrawable="@drawable/shape_search_cursor"
            android:textSize="@dimen/text_size_normal"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/divider_color"/>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_check_cancel"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="关闭"
            android:textColor="@color/daily_color"
            android:textSize="@dimen/text_size_normal"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_check_save"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/daily_color"
            android:textSize="@dimen/text_size_normal"/>

        <TextView
            android:id="@+id/tv_check_use"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="保存并使用"
            android:textColor="@color/daily_color"
            android:textSize="@dimen/text_size_normal"/>
    </LinearLayout>
</LinearLayout>
