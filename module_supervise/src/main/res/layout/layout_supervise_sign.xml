<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@drawable/shape_dispose_sign">

        <com.zx.module_supervise.module.supervise.func.view.SignatureView
            android:id="@+id/sign_view"
            android:layout_width="300dp"
            android:layout_height="300dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sign_clear"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="清除"
            android:textColor="@color/supervise_color"
            android:textSize="@dimen/text_size_normal"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_sign_cancel"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="退出"
            android:textColor="@color/supervise_color"
            android:textSize="@dimen/text_size_normal"/>

        <TextView
            android:id="@+id/tv_sign_submit"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/supervise_color"
            android:textSize="@dimen/text_size_normal"/>
    </LinearLayout>

</LinearLayout>
