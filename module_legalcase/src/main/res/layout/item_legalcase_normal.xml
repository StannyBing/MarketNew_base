<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/shape_legalcase_icbg">

            <ImageView
                android:id="@+id/iv_legalcase_itemPic"
                android:layout_width="20dp"
                android:layout_marginTop="5dp"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/tv_legalcase_itemType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="7sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_legalcase_itemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="123"
                android:textColor="@color/text_color_noraml"
                android:textSize="@dimen/text_size_normal"/>

            <TextView
                android:text="123"
                android:id="@+id/tv_legalcase_itemInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_legalcase_itemStatus"
                android:layout_marginBottom="2dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                android:text="123"
                android:id="@+id/tv_legalcase_itemStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_size_small"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_legalcase_itemDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/text_size_small"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/divider_color"/>
</RelativeLayout>
