<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_task"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:background="@drawable/shape_map_task"
        android:layout_height="100dp">


        <LinearLayout
            android:id="@+id/ll_task_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_task_type"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"/>

             <TextView
                 android:id="@+id/tv_task_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/text_size_smaller"
                android:textColor="@color/text_color_noraml"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_task_name"
            android:layout_toRightOf="@id/ll_task_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_big"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:singleLine="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_task_other"
            android:layout_toRightOf="@id/ll_task_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_smaller"
            android:textColor="@color/text_color_noraml"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_below="@id/tv_task_name"
            android:singleLine="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_task_address"
            android:layout_toRightOf="@id/ll_task_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_smaller"
            android:layout_below="@id/tv_task_other"
            android:textColor="@color/text_color_noraml"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:ellipsize="end"/>
    </RelativeLayout>

</RelativeLayout>